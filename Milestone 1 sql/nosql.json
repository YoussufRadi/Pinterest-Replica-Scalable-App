Post : {

	id : UUID,
	userId : User,
	body: string,
	category : [Category],
	hashtags: [Tag],
	likes : [User] ,
	dislikes : [User],
	comment :[cid],
	image :[Image]

}

Comment :{
	cid : UUID,
	body : string,
	replies : [comment ]
}

Image :{
	id: UUID,
	content: *actual image*
}

Category : {

	id: UUID,
	title : string,
	hashtags :[Tags],
	posts :[Post]
}

Chat : {
	id:UUID,
	body : string,
	userSent:User,
	userRec : User
}

Tag : {
	id :UUID,
	tag:string
	counter:long
}


Board : {

	boardID : UUID,
	userID : UUID,
	title : String,
	posts : [Post]

}


